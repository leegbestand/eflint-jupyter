<?xml version="1.0"?>
<!DOCTYPE flint SYSTEM "../assets/schema.dtd">
<flint>
  <specification>
    <ifact-frame id="person">
      <type-expr>["alice" + "bob" + "chloe" + "david" + "ellis" + "felix"]</type-expr>
    </ifact-frame>
    <ifact-frame id="father">
      <type-expr>[person1 * person2]</type-expr>
    </ifact-frame>
    <ifact-frame id="adoptive parent">
      <type-expr>[person1 * person2]</type-expr>
    </ifact-frame>
    <ifact-frame id="legal guardian">
      <type-expr>[adoptive parent + father]</type-expr>
    </ifact-frame>
    <iact-frame id="reward child">
      <actor><ifact-ref><type>person1</type></ifact-ref></actor>
      <subject><ifact-ref><type>person2</type></ifact-ref></subject>
      <value-expr>legal guardian</value-expr>
    </iact-frame> 
    <iact-frame id="call for help">
      <actor><ifact-ref><type>person1</type></ifact-ref></actor>
      <subject><ifact-ref><type>person2</type></ifact-ref></subject>
      <value-expr>legal guardian[person1=person2,person2=person1]</value-expr> 
    </iact-frame>
  </specification>
  <initials>
    <decomposition>
      <type>person</type> <!-- all persons are in the initial world -->
    </decomposition>
    <decomposition>
      <type>father</type>
      <binding>
        <type>person1</type>
        <element><string>bob</string></element>
      </binding>
      <binding>
        <type>person2</type>
        <element><string>chloe</string></element>
      </binding>
    </decomposition>
    <decomposition>
      <type>father</type>
      <binding>
        <type>person1</type>
        <element><string>bob</string></element>
      </binding>
      <binding>
        <type>person2</type>
        <element><string>david</string></element>
      </binding>
    </decomposition>
    <decomposition>
      <type>adoptive parent</type>
      <binding>
        <type>person1</type>
        <element><string>alice</string></element>
      </binding>
      <binding>
        <type>person2</type>
        <element><string>bob</string></element>
      </binding>
    </decomposition>
    <decomposition>
      <type>reward child</type>
      <binding>
        <type>person1</type>
        <element><string>bob</string></element>
      </binding>
    </decomposition> 
    <decomposition>
      <type>call for help</type>
    </decomposition>
  </initials>
</flint>
