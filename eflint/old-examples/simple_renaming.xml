<?xml version="1.0"?>
<!DOCTYPE flint SYSTEM "../assets/schema.dtd">
<flint>
  <specification>
    <ifact-frame id="person">
      <type-expr>["john" + "alice"]</type-expr>
    </ifact-frame>   
    <ifact-frame id="application">
      <type-expr>[person]</type-expr>
    </ifact-frame>
    <iact-frame id="make application">
      <actor><ifact-ref><type>person</type></ifact-ref></actor>
      <subject><ifact-ref><type>person</type></ifact-ref></subject>
      <value-expr>true</value-expr>
      <icreates>
        <type>application[person=person]</type>
      </icreates>
    </iact-frame>
  </specification>
  <initials>
    <decomposition>
      <type>person</type>
    </decomposition>
    <decomposition>
      <type>make application</type>
    </decomposition>
  </initials>
</flint>
